---
interface Props{
    recursos_footer_titulo: string;
    recursos_item_1: string;
    recursos_item_2: string;
    recursos_item_3: string;
    recursos_item_4: string;
    siganos_footer_titulo: string;
    siganos_item_1: string;
    siganos_item_2: string;
    legal_footer_titulo: string;
    legal_item_1: string;
    legal_item_2: string;
    rights_footer: string;
}

const {
    recursos_footer_titulo, 
    recursos_item_1, 
    recursos_item_2, 
    recursos_item_3, 
    recursos_item_4, 
    siganos_footer_titulo, 
    siganos_item_1, 
    siganos_item_2, 
    legal_footer_titulo, 
    legal_item_1, 
    legal_item_2,
    rights_footer} = Astro.props;

---



<footer class="relative top-20 py-5 w-screen flex justify-center items-center">
    <div class="w-full border-t-2 border-slate-700 max-w-7xl p-4 py-6 lg:py-8">
        <div class="md:flex justify-between">
          <div class="mb-6 md:mb-0 py-5 flex justify-center items-center">
              <a href="#" class="w-full h-full flex justify-center items-center">
                <img src="../../public/icons/logo-nobackground-best.png" class="h-28">
              </a>
          </div>
          <div class="grid grid-cols-2 gap-8 sm:gap-6 sm:grid-cols-3">
              <div>
                  <h2 class="mb-6 text-sm font-semibold uppercase text-white">{recursos_footer_titulo}</h2>
                  <ul class="text-gray-400 font-medium">
                      <li class="mb-2">
                          <a href="https://astro.build/" target="_blank" class="hover:underline">{recursos_item_1}</a>
                      </li>
                      <li class="mb-2">
                        <a href="https://astro.build/" target="_blank" class="hover:underline">{recursos_item_2}</a>
                      </li>
                      <li class="mb-2">
                        <a href="https://astro.build/" target="_blank" class="hover:underline">{recursos_item_3}</a>
                      </li>
                      <li>
                        <a href="https://astro.build/" target="_blank" class="hover:underline">{recursos_item_4}</a>
                      </li>
                  </ul>
              </div>
              <div>
                  <h2 class="mb-6 text-sm font-semibold uppercase text-white">{siganos_footer_titulo}</h2>
                  <ul class="text-gray-400 font-medium">
                      <li class="mb-2">
                          <a href="https://github.com/GarcesSebastian/EasyCredit/tree/main" target="_blank" class="hover:underline ">{siganos_item_1}</a>
                      </li>
                      <li>
                          <a href="#" target="_blank" class="hover:underline">{siganos_item_2}</a>
                      </li>
                  </ul>
              </div>
              <div>
                  <h2 class="mb-6 text-sm font-semibold uppercase text-white">{legal_footer_titulo}</h2>
                  <ul class="text-gray-400 font-medium">
                      <li class="mb-2">
                          <a href="#" target="_blank" class="hover:underline">{legal_item_1}</a>
                      </li>
                      <li>
                          <a href="#" target="_blank" class="hover:underline">{legal_item_2}</a>
                      </li>
                  </ul>
              </div>
          </div>
      </div>
      <hr class="my-6 sm:mx-auto border-gray-700 lg:my-8" />
      <div class="sm:flex sm:items-center sm:justify-between">
          <span class="text-sm sm:text-center text-gray-400">© 2024 <a href="/" class="hover:underline">EasyCredit™.</a> {rights_footer}
          </span>
          <div class="flex mt-4 sm:justify-center sm:mt-0">
              <a href="#" target="_blank" class="hover:hover:text-white ms-5">
                <svg  class="w-6 h-6" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-brand-linkedin" viewBox="0 0 24 24" stroke-width="2" stroke="white" fill="none" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                    <path d="M4 4m0 2a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2z" />
                    <path d="M8 11l0 5" />
                    <path d="M8 8l0 .01" />
                    <path d="M12 16l0 -5" />
                    <path d="M16 16v-3a2 2 0 0 0 -4 0" />
                </svg>
                  <span class="sr-only">Linkedin page</span>
              </a>
              <a href="https://github.com/GarcesSebastian" target="_blank" class="hover:hover:text-white ms-5">
                  <svg class="w-6 h-6" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="white" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 .333A9.911 9.911 0 0 0 6.866 19.65c.5.092.678-.215.678-.477 0-.237-.01-1.017-.014-1.845-2.757.6-3.338-1.169-3.338-1.169a2.627 2.627 0 0 0-1.1-1.451c-.9-.615.07-.6.07-.6a2.084 2.084 0 0 1 1.518 1.021 2.11 2.11 0 0 0 2.884.823c.044-.503.268-.973.63-1.325-2.2-.25-4.516-1.1-4.516-4.9A3.832 3.832 0 0 1 4.7 7.068a3.56 3.56 0 0 1 .095-2.623s.832-.266 2.726 1.016a9.409 9.409 0 0 1 4.962 0c1.89-1.282 2.717-1.016 2.717-1.016.366.83.402 1.768.1 2.623a3.827 3.827 0 0 1 1.02 2.659c0 3.807-2.319 4.644-4.525 4.889a2.366 2.366 0 0 1 .673 1.834c0 1.326-.012 2.394-.012 2.72 0 .263.18.572.681.475A9.911 9.911 0 0 0 10 .333Z" clip-rule="evenodd"/>
