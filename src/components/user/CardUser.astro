---
interface Props{
    num_id: string,
    date: string,
    nombre: string,
    code: number
}

const {num_id, date, nombre, code} = Astro.props;
---

<div id="contentTarget" class="flex items-center justify-end w-full mb-3">
    <svg  xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"  fill="fill"  stroke="rgb(250 204 21)"  stroke-width="1.5"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-steam h-12">
        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
        <path d="M12 4m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0" />
        <path d="M4 12m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0" />
        <path d="M20 12m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0" />
        <path d="M12 20m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0" />
        <path d="M5.5 5.5l3 3" />
        <path d="M15.5 15.5l3 3" />
        <path d="M18.5 5.5l-3 3" />
        <path d="M8.5 15.5l-3 3" />
    </svg>
</div>
<div id="contentTarget" class="flex flex-col gap-2">
    <p class="text-lg">{num_id}</p>
    <p class="">{date}</p>
</div>
<div id="contentTarget" class="p-1">
    <h2 class="text-xl font-blod text-right">
        {nombre}
    </h2>
</div>
<div id="back" class="">
    <div id="line"></div>
    <div id="number">
        <h2 class="m-auto">{code}</h2>
    </div>
</div>

<style>
    #card_balance{
        display: none;
    }

    #back {
        display: none;
        flex-direction: column;
    }

    #back #line {
        background-color: rgba(101, 131, 233, 0.863);
        padding: 10px;
        height: 33px;
        border-radius: 10px 10px 0 0;
    }

    #back #number {
        display: flex;
        align-items: center;
        padding: 40px 0;
    }

    #card_pays_principal:hover {
        padding: 0;
        animation: rotate 0.5s ease forwards;
    }

    #card_pays_principal:hover #back {
        display: flex;
        font-size: 30px;
        font: bold;
    }

    #card_pays_principal:hover #contentTarget {
        display: none;
    }

    #card_pays{
        display: none;
    }

    #contentTarget{
        color: white;
    }

    .m-auto{
        color: white;
    }

    .logo-white {
        filter: brightness(0) invert(1); 
    }

    @keyframes rotate {
        0% {
            transform: rotateY(180deg);
        }
        100% {
            transform: rotateY(0);
        }
    }

    @media(max-width 620px;){
        #contentTarget, #card_pays {
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
            padding: 1rem;
        }
    }
</style>