---
    interface Props{
        tipo_notification: string;
        origin: string;
        action_notification: number;
        state_notification: string;
        fecha_notification: string;
        message: string;
        id_notification: number;
    }

    const { tipo_notification, origin, action_notification, state_notification, fecha_notification, message, id_notification } = Astro.props;
---

<article id="movement" class="bg-gradient-to-r to-[#0074D3] from-[#0040A8] shadow-lg flex flex-col rounded-lg">
    <div id="preview" class="flex items-center p-5 justify-between gap-3">
        {
            tipo_notification == "Transfer" ? (
                <div id="logo" class="h-full">
                    <img
                    class="size-14"
                    src="https://img.icons8.com/?size=48&id=vqyoQCZ3fPp5&format=png"
                    alt=""
                    />
                </div>

                <div id="data" class="flex flex-col justify-center items-start w-[90%] gap-1">
                    <h3 class="text-xl text-white">{tipo_notification}</h3>

                    <p>
                        Haz recibido una transferencia de <span class="font-bold">{origin}</span> con un monto de <span class="font-bold">{action_notification}$</span>.
                    </p>

                    <span class="w-full h-fit flex justify-between items-end mt-2">
                        <button id="item_movement" data-id-movement={id_notification} type="button" class="focus:outline-none text-black font-bold bg-yellow-400 hover:bg-yellow-500 focus:ring-4 focus:ring-white rounded-lg text-md px-5 py-2.5">
                            mostrar
                        </button>

                        <h3 class="w-full text-wrap px-2 h-full flex items-center justify-end">
                            {fecha_notification}
                        </h3>
                    </span>
                </div>
            ) : (
                <div id="logo" class="h-full">
                    <img
                    class="size-14"
                    src="https://img.icons8.com/?size=256&id=eYaVJ9Nbqqbw&format=png"
                    alt=""
                    />
                </div>

                <div id="data" class="flex flex-col justify-center items-start w-[90%] gap-1">
                    <h3 class="text-xl text-white">{tipo_notification}</h3>

                    <p>
                        Usted hizo un prestamo al <span class="font-bold">{origin}</span> con un monto de <span class="font-bold">{action_notification}$</span>.
                    </p>

                    <span class="w-full h-fit flex justify-between items-end mt-2">
                        <button id="item_movement" type="button" data-id-movement={id_notification} class="focus:outline-none text-black font-bold bg-yellow-400 hover:bg-yellow-500 focus:ring-4 focus:ring-white rounded-lg text-md px-5 py-2.5">
                            mostrar
                        </button>

                        <h3 class="w-full h-full text-wrap px-2 flex items-center justify-end">
                            {fecha_notification}
                        </h3>
                    </span>
                </div>
            )
        }
    </div>
</article> 