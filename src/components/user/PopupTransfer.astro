---
    import PopupBase from "./PopupBase.astro"

    interface Props{
        text_transfer: string,
        text_numero_tarjeta_destino: string,
        text_monto_transfer: string,
        text_description_transfer: string,
        type_description_transfer: string,
        make_transfer: string,
    }

    const {
        text_transfer,
        text_numero_tarjeta_destino,
        text_monto_transfer,
        text_description_transfer,
        type_description_transfer,
        make_transfer
    } = Astro.props;
---

<PopupBase 
    class="relative w-[30rem] -top-10 py-5 rounded-md z-10 bg-slate-700 mb-5" 
    id="popup-center" 
    class_content="hidden h-screen fixed" 
    id_inter_content="popup-inter-transfer"
    id_background="background-popup-transfer" 
    id_close="close-transfer"
    >
    <div class="p-5 border-b-[1px] mb-5">
        <h1 class="text-2xl font-bold text-white">{text_transfer}</h1>
    </div>

    <form id="form-transfer" class="px-5 pt-2">
        <label for="input-numero-identidad" class="block mb-2 ml-0 text-sm font-medium text-white relative">{text_numero_tarjeta_destino}</label>
        <div class="relative mb-2.5">
            <div class="absolute inset-y-0 start-0 flex items-center ps-3.5 pointer-events-none">
                <svg  xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-id w-5 h-5 text-gray-500 dark:text-gray-400">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                    <path d="M3 4m0 3a3 3 0 0 1 3 -3h12a3 3 0 0 1 3 3v10a3 3 0 0 1 -3 3h-12a3 3 0 0 1 -3 -3z" />
                    <path d="M9 10m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0" />
                    <path d="M15 8l2 0" />
                    <path d="M15 12l2 0" />
                    <path d="M7 16l10 0" />
                </svg>
            </div>
            <input type="number" id="input-numero-tarjeta-transfer" class="outline-none border text-white text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full ps-10 p-4  bg-slate-800 border-slate-800 placeholder-gray-400" placeholder={text_numero_tarjeta_destino} required>
        </div>
        <span id="err-numero-tarjeta-transfer" class="relative text-sm mx-2 text-[tomato] transition-all duration-500 hidden">Prueba</span>

        <label for="input-action" class="block mb-2 mt-1.5 text-sm font-medium text-white relative">{text_monto_transfer}</label>
        <div class="relative mb-2.5">
            <div class="absolute inset-y-0 start-0 flex items-center ps-3.5 pointer-events-none">
                <svg  xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-mail-dollar w-5 h-5 text-gray-500 dark:text-gray-400">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                    <path d="M13.5 19h-8.5a2 2 0 0 1 -2 -2v-10a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v3.5" />
                    <path d="M21 15h-2.5a1.5 1.5 0 0 0 0 3h1a1.5 1.5 0 0 1 0 3h-2.5" />
                    <path d="M19 21v1m0 -8v1" />
                    <path d="M3 7l9 6l9 -6" />
                </svg>
            </div>
            <input type="number" id="input-action-transfer" class="outline-none border text-white text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full ps-10 p-4  bg-slate-800 border-slate-800 placeholder-gray-400" placeholder={text_monto_transfer} required>
        </div>
        <span id="err-action-transfer" class="relative text-sm mx-2 text-[tomato] transition-all duration-500 hidden">Prueba</span>

        <label for="message" class="block mb-2 mt-1.5 text-sm font-medium text-white relative">{text_description_transfer}</label>
        <div class="relative mb-2.5">
            <textarea id="input-message-transfer" class="max-h-[9rem] min-h-[5rem] outline-none border text-white text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block justify-center items-center w-full px-4 py-3  bg-slate-800 border-slate-800 placeholder-gray-400" placeholder={type_description_transfer}></textarea>
        </div>
        <span id="err-message-transfer" class="relative text-sm mx-2 text-[tomato] transition-all duration-500 hidden">Prueba</span>

        <div class="w-full flex justify-left items-center relative mt-1">
            <button type="submit" class="w-full max-w-[13rem] transition-all duration-300 text-black outline-none text-bold text-base bg-white hover:bg-whit hover:bg-black hover:text-white focus:ring-slate-800 focus:ring-4 font-medium rounded-lg px-5 py-3 text-center inline-flex items-center justify-center mb-2">
                {make_transfer}
            </button>
        </div>
    </form>
</PopupBase>

<div class="w-screen h-screen fixed justify-center items-center popup top-0 p-5 drop-shadow-lg hidden">
    <div id="" class="absolute w-full h-full bg-transparent cursor-pointer"></div>

    <div id="" class="relative w-[25rem] py-5 rounded-md z-10 bg-slate-700 mb-5">
        
        <div id="" class="absolute top-5 right-5 hover:bg-slate-800 cursor-pointer p-[.25rem] rounded-sm">
            <svg  xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-x w-6 h-6 text-white">
                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                <path d="M18 6l-12 12" />
                <path d="M6 6l12 12" />
            </svg>
        </div>

        <div class="px-5 flex flex-col justify-center items-center w-full gap-y-8">
            <div class="w-full flex flex-col justify-center items-center gap-y-5">
                <svg  xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"  fill="none"  stroke="currenColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-help-hexagon w-32 h-32 stroke-red-500">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                    <path d="M19.875 6.27c.7 .398 1.13 1.143 1.125 1.948v7.284c0 .809 -.443 1.555 -1.158 1.948l-6.75 4.27a2.269 2.269 0 0 1 -2.184 0l-6.75 -4.27a2.225 2.225 0 0 1 -1.158 -1.948v-7.285c0 -.809 .443 -1.554 1.158 -1.947l6.75 -3.98a2.33 2.33 0 0 1 2.25 0l6.75 3.98h-.033z" />
                    <path d="M12 16v.01" />
                    <path d="M12 13a2 2 0 0 0 .914 -3.782a1.98 1.98 0 0 0 -2.414 .483" />
                </svg>

                <h1 class="text-white font-bold text-2xl text-center">
                    Are you sure you want to continue?
                </h1>
            </div>

            <div class="w-full flex justify-center items-center gap-x-10">
                <input type="button" value="Continuar" class="bg-lime-500 px-5 py-3 rounded-md hover:bg-lime-600 cursor-pointer">
                <input type="button" value="Cancelar" class="bg-red-500 px-5 py-3 rounded-md hover:bg-red-600 cursor-pointer">
            </div>
        </div>
    </div>
</div>

<style>
    .drop-shadow-lg {
      --tw-drop-shadow: drop-shadow(0 0px 8px rgba(0, 0, 0, 0.06)) drop-shadow(0 0px 3px rgba(0, 0, 0, 0.6));
    }

    .popup{
        z-index: 10;
        --tw-bg-opacity: .75;
        background-color: rgba(13, 17, 23, var(--tw-bg-opacity));
    }
</style>

