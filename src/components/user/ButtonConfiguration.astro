---
interface Props{
    text: string;
    data_text: string;
}

const {text, data_text} = Astro.props;
---

<div id="sub_btn_configurations" class="flex justify-start gap-5 max-xl:gap-2 w-[100%] max-sm:w-fit h-fit bg-slate-800 hover:bg-slate-700 transition-all duration-200 ease-in cursor-pointer py-2 px-2 items-center rounded-[3px]"
    data-text={data_text}
>
    <slot/>

    <span class="text-white text-xl max-xl:text-base font-semibold max-sm:hidden">
      {text}
    </span>
</div>