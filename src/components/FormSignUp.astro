---
import {SignIn} from 'auth-astro/components';
import ValidateEmail from './user/ValidateEmail.astro';

interface Props{
    registrarse_text: string;
    iniciar_text: string;
    exists_text: string;
    username_text: string;
    email_text: string;
    password_text: string;
    id_number_text: string;
    phone_text: string;
    agree_text: string;
    terms_conditions: string;
    continue_with_text: string;
    registrarse_with_google: string;
    income_monthly_text: string,
    title_validate_email_text: string,
    description_validate_email_text: string,
    verify_email_text: string,
}

const {registrarse_text,iniciar_text,exists_text,username_text,
    email_text,password_text,id_number_text,phone_text,agree_text,
    terms_conditions,continue_with_text,registrarse_with_google,
    income_monthly_text, title_validate_email_text, description_validate_email_text,
    verify_email_text
    } = Astro.props;

---

<form id="form-signup" class="bg-transparent relative top-20 py-10 px-5 max-w-[35rem] w-full flex flex-col justify-center items-center gap-y-6 m-5">

    <div id="background-blur" class="absolute w-full h-full flex bg-[rgba(255,255,255,.02)] border border-gray-600 rounded-lg backdrop-blur-lg"></div>

    <div class="w-full flex flex-col justify-center items-center gap-y-2 z-2">
        <h2 class="text-white font-bold text-2xl relative">
            {registrarse_text}
        </h2>

        <span class="text-gray-300 font-light text-base relative">
            {exists_text} <a class="text-white underline font-normal" href="/SignIn">{iniciar_text}</a>
        </span>
    </div>

    <div class="w-full flex flex-col z-2">

        <label for="input-username" class="block mb-2 text-sm font-medium text-white relative">{username_text}</label>
        <div class="relative mb-1">
            <div class="absolute inset-y-0 start-0 flex items-center ps-3.5 pointer-events-none">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-gray-500 dark:text-gray-400 icon icon-tabler icon-tabler-user-hexagon" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                    <path d="M12 13a3 3 0 1 0 0 -6a3 3 0 0 0 0 6z" />
                    <path d="M6.201 18.744a4 4 0 0 1 3.799 -2.744h4a4 4 0 0 1 3.798 2.741" />
                    <path d="M19.875 6.27c.7 .398 1.13 1.143 1.125 1.948v7.284c0 .809 -.443 1.555 -1.158 1.948l-6.75 4.27a2.269 2.269 0 0 1 -2.184 0l-6.75 -4.27a2.225 2.225 0 0 1 -1.158 -1.948v-7.285c0 -.809 .443 -1.554 1.158 -1.947l6.75 -3.98a2.33 2.33 0 0 1 2.25 0l6.75 3.98h-.033z" />
                </svg>
            </div>
            <input type="text" id="input-username" class="outline-none border text-white text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full ps-10 p-4  bg-slate-800 border-slate-800 placeholder-gray-400" placeholder={username_text} required>
        </div>
        <span id="err-username" class="relative text-sm mx-2 mb-5 text-[tomato] transition-all duration-500 opacity-0"></span>

        <label for="input-email" class="block mb-2 text-sm font-medium text-white relative">{email_text}</label>
        <div class="relative mb-1">
            <div class="absolute inset-y-0 start-0 flex items-center ps-3.5 pointer-events-none">
                <svg class="w-4 h-4 text-gray-500 dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 16">
                    <path d="m10.036 8.278 9.258-7.79A1.979 1.979 0 0 0 18 0H2A1.987 1.987 0 0 0 .641.541l9.395 7.737Z"/>
                    <path d="M11.241 9.817c-.36.275-.801.425-1.255.427-.428 0-.845-.138-1.187-.395L0 2.6V14a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V2.5l-8.759 7.317Z"/>
                </svg>
            </div>
            <input type="email" id="input-email" class="outline-none border text-white text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full ps-10 p-4  bg-slate-800 border-slate-800 placeholder-gray-400" placeholder="email@example.com" required>
        </div>
        <span id="err-email" class="relative text-sm mx-2 mb-5 text-[tomato] transition-all duration-500 opacity-0"></span>

        <label for="input-password" class="block mb-2 text-sm font-medium text-white relative">{password_text}</label>
        <div class="relative mb-1">
            <div class="absolute inset-y-0 start-0 flex items-center ps-3.5 pointer-events-none">
                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-key w-5 h-5 text-gray-500 dark:text-gray-400" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                    <path d="M16.555 3.843l3.602 3.602a2.877 2.877 0 0 1 0 4.069l-2.643 2.643a2.877 2.877 0 0 1 -4.069 0l-.301 -.301l-6.558 6.558a2 2 0 0 1 -1.239 .578l-.175 .008h-1.172a1 1 0 0 1 -.993 -.883l-.007 -.117v-1.172a2 2 0 0 1 .467 -1.284l.119 -.13l.414 -.414h2v-2h2v-2l2.144 -2.144l-.301 -.301a2.877 2.877 0 0 1 0 -4.069l2.643 -2.643a2.877 2.877 0 0 1 4.069 0z" />
                    <path d="M15 9h.01" />
                </svg>
            </div>
            <input type="password" id="input-password" class="outline-none border text-white text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full ps-10 p-4  bg-slate-800 border-slate-800 placeholder-gray-400" placeholder={password_text} required>
        </div>
        <span id="err-password" class="relative text-sm mx-2 mb-5 text-[tomato] transition-all duration-500 opacity-0"></span>

        <label for="input-numero_identidad" class="block mb-2 text-sm font-medium text-white relative">{id_number_text}</label>
        <div class="relative mb-1">
            <div class="absolute inset-y-0 start-0 flex items-center ps-3.5 pointer-events-none">
                <svg  xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-id w-5 h-5 text-gray-500 dark:text-gray-400">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                    <path d="M3 4m0 3a3 3 0 0 1 3 -3h12a3 3 0 0 1 3 3v10a3 3 0 0 1 -3 3h-12a3 3 0 0 1 -3 -3z" />
                    <path d="M9 10m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0" />
                    <path d="M15 8l2 0" />
                    <path d="M15 12l2 0" />
                    <path d="M7 16l10 0" />
                </svg>
            </div>
            <input type="number" id="input-numero_identidad" class="outline-none border text-white text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full ps-10 p-4  bg-slate-800 border-slate-800 placeholder-gray-400" placeholder={id_number_text} required>
        </div>
        <span id="err-numero_identidad" class="relative text-sm mx-2 mb-5 text-[tomato] transition-all duration-500 opacity-0"></span>

        <label for="input-numero_telefono" class="block mb-2 text-sm font-medium text-white relative">{phone_text}</label>
        <div class="relative mb-1">
            <div class="absolute inset-y-0 start-0 flex items-center ps-3.5 pointer-events-none">
                <svg  xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-phone w-5 h-5 text-gray-500 dark:text-gray-400">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                    <path d="M5 4h4l2 5l-2.5 1.5a11 11 0 0 0 5 5l1.5 -2.5l5 2v4a2 2 0 0 1 -2 2a16 16 0 0 1 -15 -15a2 2 0 0 1 2 -2" />
                </svg>
            </div>
            <input type="number" id="input-numero_telefono" class="outline-none border text-white text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full ps-10 p-4  bg-slate-800 border-slate-800 placeholder-gray-400" placeholder={phone_text} required>
        </div>
        <span id="err-numero_telefono" class="relative text-sm mx-2 mb-5 text-[tomato] transition-all duration-500 opacity-0"></span>

        <label for="input-ingreso-mensual" class="block mb-2 text-sm font-medium text-white relative">{income_monthly_text}</label>
        <div class="relative mb-1">
            <div class="absolute inset-y-0 start-0 flex items-center ps-3.5 pointer-events-none">
                <svg  xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-heart-dollar w-5 h-5 text-gray-500 dark:text-gray-400">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                    <path d="M13 19l-1 1l-7.5 -7.428a5 5 0 1 1 7.5 -6.566a5 5 0 0 1 8.785 4.444" />
                    <path d="M21 15h-2.5a1.5 1.5 0 0 0 0 3h1a1.5 1.5 0 0 1 0 3h-2.5" />
                    <path d="M19 21v1m0 -8v1" />
                </svg>
            </div>
            <input type="number" id="input-ingreso-mensual" class="outline-none border text-white text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full ps-10 p-4  bg-slate-800 border-slate-800 placeholder-gray-400" placeholder={income_monthly_text} required>
        </div>
        <span id="err-ingreso-mensual" class="relative text-sm mx-2 mb-5 text-[tomato] transition-all duration-500 opacity-0"></span>

        <label for="input-gasto-mensual" class="block mb-2 text-sm font-medium text-white relative">Gastos mensuales</label>
        <div class="relative mb-1">
            <div class="absolute inset-y-0 start-0 flex items-center ps-3.5 pointer-events-none">
                <svg  xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-heart-dollar w-5 h-5 text-gray-500 dark:text-gray-400">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                    <path d="M13 19l-1 1l-7.5 -7.428a5 5 0 1 1 7.5 -6.566a5 5 0 0 1 8.785 4.444" />
                    <path d="M21 15h-2.5a1.5 1.5 0 0 0 0 3h1a1.5 1.5 0 0 1 0 3h-2.5" />
                    <path d="M19 21v1m0 -8v1" />
                </svg>
            </div>
            <input type="number" id="input-gasto-mensual" class="outline-none border text-white text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full ps-10 p-4  bg-slate-800 border-slate-800 placeholder-gray-400" placeholder="Gastos mensuales" required>
        </div>
        <span id="err-gasto-mensual" class="relative text-sm mx-2 mb-0 text-[tomato] transition-all duration-500 opacity-0"></span>

    </div>

    <div class="w-full flex justify-end items-center relative">
        <div class="flex items-start mb-0">
            <div class="flex items-center h-5">
            <input id="remember" type="checkbox" value="" class="w-4 h-4 border border-gray-300 rounded bg-gray-50 focus:ring-3 focus:ring-blue-300 dark:bg-gray-700 dark:border-gray-600 dark:focus:ring-blue-600 dark:ring-offset-gray-800" required />
            </div>
            <label for="remember" class="ms-2 text-sm font-medium text-gray-300">{agree_text} <a href="/terms" target="_blank" class="text-blue-600 hover:underline dark:text-blue-500">{terms_conditions}</a>.</label>
        </div>
    </div>

    <div class="w-full flex justify-center items-center relative">
        <button type="submit" class="w-full text-white outline-none text-bold text-base bg-slate-800 hover:bg-slate-800/90 focus:ring-slate-700 focus:ring-4 font-medium rounded-lg px-5 py-4 text-center inline-flex items-center justify-center me-2 mb-2">
            {registrarse_text}
        </button>
    </div>

    <div class="w-full flex justify-center items-center py-1 relative text-white">
        <span>
            {continue_with_text}
        </span>
    </div>

    <div class="w-full flex justify-center items-center relative">
        <SignIn provider="google" type="button" class="w-full text-white outline-none bg-gradient-to-r to-[#0074D3] from-[#0040A8] hover:opacity-70 focus:ring-4 focus:outline-none focus:ring-[#4285F4]/50 font-medium rounded-lg text-sm px-5 py-4 text-center inline-flex items-center justify-center dark:focus:ring-[#4285F4]/55 me-2 mb-2">
            <svg class="w-4 h-4 me-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 18 19">
                <path fill-rule="evenodd" d="M8.842 18.083a8.8 8.8 0 0 1-8.65-8.948 8.841 8.841 0 0 1 8.8-8.652h.153a8.464 8.464 0 0 1 5.7 2.257l-2.193 2.038A5.27 5.27 0 0 0 9.09 3.4a5.882 5.882 0 0 0-.2 11.76h.124a5.091 5.091 0 0 0 5.248-4.057L14.3 11H9V8h8.34c.066.543.095 1.09.088 1.636-.086 5.053-3.463 8.449-8.4 8.449l-.186-.002Z" clip-rule="evenodd"/>
            </svg>
            {registrarse_with_google}
        </SignIn>
    </div>
</form>

<ValidateEmail 
    title_validate_email_text={title_validate_email_text},
    description_validate_email_text={description_validate_email_text},
    verify_email_text={verify_email_text}
    id_form='form-validate'
    id_form_inputs='validate_email_input'
    id_popup="popup-center-validate" 
    id_inter="popup-inter-validate"
    id_background="background-popup-validate" 
    id_close="close-validate"
    id_err_code='err-validate-code'
/>

<style>
    #background-blur{
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        margin: auto;
    }
</style>
