<style>
    .container-image{
        width: 30rem;
        height: 100%;
        background-image: url("../../public/background/giro.png");
        background-position:center;
        background-repeat: no-repeat;
        background-size:contain;
    }

    @media (width > 590px) {
        .list-options li:not(.list-options li:last-child){
            border-right: 2px solid #ccc;
        }
    }

    @media (max-width: 1280px) {
        .container-image{
            width: 25rem;
        }
    }

    @media (max-width: 1080px) {
        .container-image{
            width: 20rem;
        }
    }

    @media (min-width: 390px) and (max-width: 590px) {
        .list-options li:nth-child(1), .list-options li:nth-child(3) {
            border-right: 1px solid #ccc;
        }

        .list-options li:nth-child(2), .list-options li:nth-child(4) {
            border-left: 1px solid #ccc;
        }

        .list-options li:nth-child(1), .list-options li:nth-child(2) {
            border-bottom: 1px solid #ccc;
        }

        .list-options li:nth-child(3), .list-options li:nth-child(4) {
            border-top: 1px solid #ccc;
        }
    }


    @media (max-width: 590px) {
        .list-options{
            grid-template-columns: repeat(2, minmax(0px, 100vw));
            justify-content: center;
            align-items: center;
            transform: translateY(2.7rem);
        }

        .list-options li{
            max-width: 100%;
        }
    }

    @media (max-width: 532px) {
        .list-options{
            transform: translateY(6.5rem);
        }
    }

    @media (max-width: 400px) {
        .list-options{
            transform: translateY(6rem);
        }

        .list-options li{
            font-size: 14.5px;
        }
    }

    @media (max-width: 380px) {
        .list-options{
            grid-template-columns: repeat(1, minmax(0px, 100vw));
            transform: translateY(16rem);
        }

        .list-options li{
            font-size: 14px;
            max-width: 100%;
            border: none;
        }

        .list-options li:not(.list-options li:last-child){
            border-bottom: 2px solid #ccc;
        }
    }

    @media (max-width: 880px) {
        .container-image{
            width: 15rem;
            height: 15rem;
        }
    }


    .bounce {
        animation: bounce .6s infinite alternate ease-in-out;
    }

    @keyframes bounce {
        from {
            transform: translateY(0);
        }
        to {
            transform: translateY(-20%);
        }
    }

</style>