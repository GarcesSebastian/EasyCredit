---
import Layout from "../layouts/Layout.astro"
import Header from "../components/Header.astro"
import Section from "../components/Section.astro"
import FormSignUp from "../components/FormSignUp.astro"
import Footer from "../components/Footer.astro"

interface WordItem{
    word: string;
    es: string;
    en: string;
}

const response = await fetch("http://localhost:4000/words");

const data: WordItem[] = await response.json();

const flag = (Astro.cookies.get("flag") || {})?.value;

let text = {
    exists_text: (data.find(item => item.word === "exists_text") || {})[flag === "es" ? 'es' : 'en'] as string,
    username_text: (data.find(item => item.word === "username_text") || {})[flag === "es" ? 'es' : 'en'] as string,
    email_text: (data.find(item => item.word === "email_text") || {})[flag === "es" ? 'es' : 'en'] as string,
    password_text: (data.find(item => item.word === "password_text") || {})[flag === "es" ? 'es' : 'en'] as string,
    id_number_text: (data.find(item => item.word === "id_number_text") || {})[flag === "es" ? 'es' : 'en'] as string,
    phone_text: (data.find(item => item.word === "phone_text") || {})[flag === "es" ? 'es' : 'en'] as string,
    agree_text: (data.find(item => item.word === "agree_text") || {})[flag === "es" ? 'es' : 'en'] as string,
    legal_item_2: (data.find(item => item.word === "legal_item_2") || {})[flag === "es" ? 'es' : 'en'] as string,
    continue_with_text: (data.find(item => item.word === "continue_with_text") || {})[flag === "es" ? 'es' : 'en'] as string,
    registrarse_with_google: (data.find(item => item.word === "registrarse_with_google") || {})[flag === "es" ? 'es' : 'en'] as string,
    recursos_footer_titulo: (data.find(item => item.word === "recursos_footer_titulo") || {})[flag === "es" ? 'es' : 'en'] as string,
    recursos_item_1: (data.find(item => item.word === "recursos_item_1") || {})[flag === "es" ? 'es' : 'en'] as string,
    recursos_item_2: (data.find(item => item.word === "recursos_item_2") || {})[flag === "es" ? 'es' : 'en'] as string,
    recursos_item_3: (data.find(item => item.word === "recursos_item_3") || {})[flag === "es" ? 'es' : 'en'] as string,
    recursos_item_4: (data.find(item => item.word === "recursos_item_4") || {})[flag === "es" ? 'es' : 'en'] as string,
    siganos_footer_titulo: (data.find(item => item.word === "siganos_footer_titulo") || {})[flag === "es" ? 'es' : 'en'] as string,
    siganos_item_1: (data.find(item => item.word === "siganos_item_1") || {})[flag === "es" ? 'es' : 'en'] as string,
    siganos_item_2: (data.find(item => item.word === "siganos_item_2") || {})[flag === "es" ? 'es' : 'en'] as string,
    legal_footer_titulo: (data.find(item => item.word === "legal_footer_titulo") || {})[flag === "es" ? 'es' : 'en'] as string,
    legal_item_1: (data.find(item => item.word === "legal_item_1") || {})[flag === "es" ? 'es' : 'en'] as string,
    rights_footer: (data.find(item => item.word === "rights_footer") || {})[flag === "es" ? 'es' : 'en'] as string,
    iniciar_text: (data.find(item => item.word === "iniciar_text") || {})[flag === "es" ? 'es' : 'en'] as string,
    registrarse_text: (data.find(item => item.word === "registrarse_text") || {})[flag === "es" ? 'es' : 'en'] as string,
};

---

<Layout title="Sebxstt - Sign In">
		<Header
			href_image="/"
			href_signin="./SignIn"
			href_signup="./SignUp"
			registrarse_text={text.registrarse_text}
			iniciar_text={text.iniciar_text}
		></Header>
		<Section>
		<FormSignUp
		registrarse_text={text.registrarse_text}
		iniciar_text={text.iniciar_text}
		exists_text={text.exists_text}
		username_text={text.username_text}
		email_text={text.email_text}
		password_text={text.password_text}
		id_number_text={text.id_number_text}
		phone_text={text.phone_text}
		agree_text={text.agree_text}
		terms_conditions={text.legal_item_2}
		continue_with_text={text.continue_with_text}
		registrarse_with_google={text.registrarse_with_google}
		>
		</FormSignUp>
		<Footer
        recursos_footer_titulo={text.recursos_footer_titulo}
        recursos_item_1={text.recursos_item_1}
        recursos_item_2={text.recursos_item_2}
        recursos_item_3={text.recursos_item_3}
        recursos_item_4={text.recursos_item_4}
        siganos_footer_titulo={text.siganos_footer_titulo}
        siganos_item_1={text.siganos_item_1}
        siganos_item_2={text.siganos_item_2}
        legal_footer_titulo={text.legal_footer_titulo}
        legal_item_1={text.legal_item_1}
        legal_item_2={text.legal_item_2}
        rights_footer={text.rights_footer}
    	></Footer>
	</Section>
</Layout>

